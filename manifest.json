{
  "name": "My YT Bookmarks",
  "version": "0.1.0",
  "description": "Saving timestamps in YT videos",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/extension.png",
      "24": "assets/extension.png",
      "32": "assets/extension.png"
    },
    "default_title": "My YT Bookmarks",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open bookmarks popup"
    },
    "save-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+B"
      },
      "description": "Save bookmark at current timestamp"
    }
  },
  "manifest_version": 3
}